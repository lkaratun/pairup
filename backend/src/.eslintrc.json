{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "react-app",
    "airbnb",
    "prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "window": false,
    "document": false,
    "fetch": false
  },
  "rules": {
    "max-len": [
      2,
      {
        "code": 120
      }
    ],
    "import/prefer-default-export": 0,
    "no-restricted-syntax": 0,
    "import/order": 0,
    "dot-notation": 0,
    "no-plusplus": 0,
    "no-use-before-define": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "func-names": [
      "off",
      "as-needed"
    ],
    "semi": "error",
    "linebreak-style": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "react/prefer-stateless-function": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-one-expression-per-line": 0,
    "import/no-unresolved": 0,
    "no-unused-expressions": "off"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "json",
    "markdown",
    "html",
    "chai-friendly"
  ],
  "env": {
    "jest": true,
    "mocha": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
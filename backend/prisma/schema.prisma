generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ActivityType {
  id   String @default(dbgenerated()) @id
  name String @unique
  activities   Activity[]

  @@map(name: "activity_type")
}

model Activity {
  id          String        @default(dbgenerated()) @id
  description String?
  imageUrl    String?       @map(name: "imageurl")
  activityType    ActivityType      @relation(fields: [activityTypeId], references: [id])
  activityTypeId  String
  location    Location?     @relation(fields: [locationId], references: [id])
  locationId  String?
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  responses   ActivityResponse[]  

  @@unique([userId, activityTypeId], name:"one_activityType_per_user")
  @@map(name: "activity")
}

model ActivityResponse {
  id     String  @default(dbgenerated()) @id
  activity     Activity      @relation(fields: [activityId], references: [id])
  activityId   String
  user   User    @relation(fields: [userId], references: [id])
  userId String

  @@unique([userId, activityId], name: "UQ_5c24bb96ab60a6e6d502f98a9b9")
  @@map(name: "activity_response")
}

model Location {
  id      String @default(dbgenerated()) @id
  city    String
  country String
  activity      Activity[]

  @@unique([country, city], name: "UQ_92b8dedd383ea612bf0ffb77be4")
  @@map(name: "location")
}

model User {
  id                 String        @default(dbgenerated()) @id
  email              String        @unique
  bio                String?
  firstName          String
  googleAccessToken  String?
  googleRefreshToken String?
  image              String?
  lastName           String?
  password           String?
  activities                Activity[]
  activityResponses        ActivityResponse[]

  @@map(name: "user")
}
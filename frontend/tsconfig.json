{
  "compilerOptions": {
    "lib": [
      "ES2019"
    ],
    "target": "ES2019",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "types": [
        "types/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]

}
